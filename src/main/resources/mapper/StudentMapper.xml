<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.repository.StudentMapper">
    <select id="getStudentById" parameterType="Long" resultType="org.example.domain.student.Student">
        SELECT id, name, department
        FROM student
        WHERE id = #{id}
    </select>

    <insert id="create" parameterType="org.example.domain.student.Student">
        INSERT INTO student
            (name, department)
        VALUES (#{name}, #{department});
    </insert>
</mapper>
